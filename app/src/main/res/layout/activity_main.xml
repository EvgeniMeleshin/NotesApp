<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:background="@drawable/edit_text_style"
        android:hint="@string/EditHeaderText"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="10dp" />

    <EditText
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop = "8dp"
        android:background="@drawable/edit_text_style"
        android:gravity="top"
        android:hint="@string/EditContentText"
        android:textColorHint="#757575"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "8dp"
        android:textSize="16sp"
        android:text = "@string/labelListNotes"/>

    <fragment
        android:id="@+id/fragmentListOfNotes"
        android:name = "ru.example.notes.FragmentListOfNotes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:text = "@string/text_fragmentListOfNotes" />

    <fragment
        android:id="@+id/fragmentInfoNote"
        android:name = "ru.example.notes.FragmentInfoNote"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop = "8dp"
        android:text = "@string/text_fragmentInfoNote" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        style="?android:attr/buttonBarButtonStyle">

        <Button
            android:id="@+id/Button_About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ButtonAboutText"
            android:textSize="0sp"
            app:iconGravity="textStart"
            app:icon="@android:drawable/ic_dialog_info" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <Button
            android:id="@+id/Button_Share"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/ButtonShareText"
            android:textSize="0sp"
            app:iconGravity="textStart"
            app:icon="?attr/actionModeShareDrawable" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <Button
            android:id="@+id/Button_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="@string/ButtonSaveText"
            android:textSize="0sp"
            app:iconGravity="textStart"
            app:icon="@android:drawable/ic_menu_save" />

    </LinearLayout>

</LinearLayout>

